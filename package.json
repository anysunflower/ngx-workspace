{
  "name": "ngx-workspace",
  "version": "0.1.1",
  "main": "./bundles/ngx-workspace.umd.js",
  "scripts": {
    "compile": "npm run lint:code && ngc -p tsconfig.lib.json --pretty",
    "compile:tsc": "npm run lint && tsc -p tsconfig.json --noUnusedLocals --pretty",
    "compile:clean": "rimraf ./src/**/*.d.ts && rimraf ./src/**/*.js",
    "bundle:create": "npm run rollup && npm run rollup:min && npm run bundle:clean",
    "bundle:clean": "rimraf out-lib",
    "demo": "npm install && npm run demo:install && npm run demo:prepare && npm run demo:start",
    "lint": "npm run lint:code && npm run lint:test",
    "lint:code": "tslint ./src/**/*.ts -t verbose --exclude ./src/**/*.d.ts",
    "lint:test": "tslint ./test/**/*.ts -t verbose --exclude ./test/**/*.d.ts",
    "prepare": "npm run compile && npm run bundle:create",
    "pretest": "npm run compile:tsc",
    "rollup": "rollup -c rollup.conf.js",
    "rollup:min": "rollup -c rollup-uglify.conf.js"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:donle/ngx-workspace.git"
  },
  "peerDependencies": {
    "@angular/common": "^6.0.0-rc.0 || ^6.0.0",
    "@angular/core": "^6.0.0-rc.0 || ^6.0.0"
  },
  "dependencies": {
    "@angular/animations": "^6.0.2",
    "@angular/common": "^6.0.2",
    "@angular/compiler": "^6.0.2",
    "@angular/core": "^6.0.2",
    "@angular/forms": "^6.0.2",
    "@angular/http": "^6.0.2",
    "@angular/platform-browser": "^6.0.2",
    "@angular/platform-browser-dynamic": "^6.0.2",
    "@angular/router": "^6.0.2",
    "core-js": "^2.5.4",
    "element-resize-detector": "^1.1.14",
    "rxjs": "^6.0.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.3",
    "@angular-devkit/build-ng-packagr": "~0.6.3",
    "@angular/cli": "~6.0.3",
    "@angular/compiler-cli": "^6.0.2",
    "@angular/language-service": "^6.0.2",
    "@types/element-resize-detector": "^1.1.0",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.2.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~1.4.2",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^2.4.5",
    "protractor": "~5.3.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.59.2",
    "rollup-plugin-uglify": "^4.0.0",
    "ts-node": "~5.0.1",
    "tsickle": ">=0.25.5",
    "tslib": "^1.7.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2"
  }
}
